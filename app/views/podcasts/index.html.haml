.row
  .col-md-12
    %h1 Podcasts
    = link_to 'New Podcast', new_podcast_path, class: 'btn btn-primary'

    %table.table
      %thead
        %tr
          %th Title
          %th

      %tbody
        - @podcasts.each do |podcast|
          %tr
            %td= podcast.title
            %td
              .btn-group
                = link_to 'Show', podcast, class: 'btn btn-default'
                = link_to 'Edit', edit_podcast_path(podcast), class: 'btn btn-default'
                = link_to 'Destroy', podcast, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default'

    %br